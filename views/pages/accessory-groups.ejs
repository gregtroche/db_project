<%- include ('../partials/header') %>
<div class="container">
    <h1>Accessory Groups</h1>
    <div class="row">
        <div class="col">
            <div class="rounded bg-light p-3">
                <div id="create-form-block">
                    <form action="" method="POST">
                        <fieldset id="create-form">
                            <legend>Add a New Accessory Group</legend>
                                <div class="row">
                                    <div class="col">
                                        <label for="create-group-name">Accessory Group Name:</label><br />
                                        <input type="text" id="create-group-name" name="accessoryGroupName" required><br />
                                    </div>
                                    <div class="col">
                                        <label for="create-event-id">Event ID:</label><br />
                                        <input type="number" id="create-event-id" name="accessoryGroupEventId" required><br />
                                    </div>
                                </div>
                                <input type="hidden" name="submissionType" value="create">
                                <input class="btn btn-primary mt-3" type="submit" value="Submit">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="rounded bg-light p-3">
                <div id="update-form-block">
                    <form action="" method="POST">
                        <fieldset id="update-form">
                            <legend>Update an Existing Product</legend>
                            <div class="row">
                                <div class="col">
                                    <label for="accessory-group-id-update">ID:</label><br />
                                    <select name="accessoryGroupId" id="accessory-group-id-update" required>
                                        <% for(let i = 0; i < accessory_data.rows.length; i++) { %>
                                            <option value="<%= accessory_data.rows[i].id %>"><%= accessory_data.rows[i].id %></option>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="col">
                                    <label for="update-event-name">Accessory Group Name:</label><br />
                                    <input type="text" id="update-accessory-group-name" name="accessoryGroupName" required><br />
                                </div>
                                <div class="col">
                                    <label for="update-event-id">Event ID:</label><br />
                                    <input type="number" id="update-event-id" name="accessoryGroupEventId" required><br />
                                </div>
                            </div>
                            <input type="hidden" name="submissionType" value="update">
                            <input class="btn btn-primary mt-3" type="submit" value="Submit">
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div> 
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Event ID</th>
                <th>Last Updated</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i = 0; i < accessory_data.rows.length; i++) { %>
                <tr>
                    <td><%= accessory_data.rows[i].id %></td>
                    <td><%= accessory_data.rows[i].name %></td>
                    <td><%= accessory_data.rows[i].event_id %></td>
                    <td><%= accessory_data.rows[i].last_updated.toString().split("GMT")[0] %></td>
                    <td>
                        <form action="" method="POST">
                            <input type="hidden" name="submissionType" value="delete">
                            <input type="hidden" name="accessoryGroupId" value="<%- accessory_data.rows[i].id %>">
                            <input class="btn btn-danger" type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>